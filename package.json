{
  "name": "@ubio/css",
  "version": "1.3.9",
  "description": "UBIO CSS framework foundation",
  "main": "index.css",
  "repository": "git@github.com:universalbasket/css",
  "author": "ubio",
  "license": "MIT",
  "private": false,
  "pre-commit": [
    "check",
    "build"
  ],
  "scripts": {
    "check": "eslint --ext=js,vue .",
    "dev": "run-p watch:* serve",
    "build": "run-p build:* && git add -A",
    "serve": "ws",
    "build:js": "browserify site/ -o docs/build/app.js",
    "build:html": "node build-html.js",
    "build:css": "postcss stylesheets/index.css -o index.css",
    "watch:js": "watchify -p browserify-hmr site/ -o docs/build/app.js",
    "preversion": "run-p check",
    "version": "run-p build",
    "postversion": "npm publish && git push origin master --tags"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babelify": "^8.0.0",
    "browserify": "^16.0.0",
    "browserify-hmr": "^0.3.6",
    "eslint": "^4.17.0",
    "eslint-config-ub": "^2.0.0",
    "eslint-plugin-vue": "2",
    "local-web-server": "^2.4.0",
    "npm-run-all": "^4.1.2",
    "postcss": "^6.0.17",
    "postcss-cli": "^5.0.0",
    "postcss-import": "^11.1.0",
    "pre-commit": "^1.2.2",
    "vue": "^2.5.13",
    "vueify": "^9.4.1",
    "watchify": "^3.10.0"
  },
  "dependencies": {
    "parse-color": "^1.0.0"
  }
}
